<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/backgound_fcfcfc</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Default</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:textSize">@dimen/res_textsize_21sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="ActionBarStyle.Default" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/detail_dowanload_button_background</item>
        <item name="android:height">48.0dip</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle</item>
    </style>

    <!--TabLayout style-->
    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tab_textsize_15sp</item>
    </style>

    <style name="nodata_bluebuttonbottom">
        <item name="android:textSize">@dimen/res_textsize_15sp</item>
        <item name="android:textColor">@color/blue_text_007dff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/no_wifi_setting_button</item>
    </style>

    <style name="detail_card_introduce_content">
        <item name="android:textSize">@dimen/detail_content_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="download_button">
        <item name="android:textSize">@dimen/res_textsize_12dp</item>
        <item name="android:textColor">@color/white_text_7c7c7c</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_title_true_15sp">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/title_name_black</item>
    </style>

    <style name="content_style_13sp_50alpha">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="detail_card_title">
        <item name="android:textSize">@dimen/res_textsize_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="detail_head_label">
        <item name="android:textSize">8.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="detail_appinfo_alpha_30_13sp">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="detail_appinfo_alpha_50_13sp">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="detail_label_item">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_list_ratingbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_list</item>
        <item name="android:progressDrawable">@drawable/ratingbar_list</item>
        <item name="android:minHeight">12.0dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="style_push_msg_marquee_text">
        <item name="android:textSize">@dimen/res_textsize_14sp</item>
        <item name="android:textColor">@color/title_name_black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="style_small_ratingbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/small_ratingbar</item>
        <item name="android:progressDrawable">@drawable/small_ratingbar</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="item_content_11dp">
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="item_content_11dp_50alpha">
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:textColor">@color/half_black</item>
    </style>
    <style name="item_content_13dp_75alpha">
        <item name="android:textSize">@dimen/dialog_content</item>
        <item name="android:textColor">@color/black_alpha_75</item>
    </style>

    <style name="expand_button_13dp_blue">
        <item name="android:textSize">@dimen/res_textsize_13dp</item>
        <item name="android:textColor">@drawable/textbutton_font_style</item>
    </style>

    <style name="empty_view_textview_style">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>
